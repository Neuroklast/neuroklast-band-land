{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self'; frame-src https://www.youtube-nocookie.com; media-src 'self' https://drive.google.com"
        },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=(), payment=()" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/admin/:p*", "destination": "/api/denied?_src=/admin/:p*" },
    { "source": "/dashboard/:p*", "destination": "/api/denied?_src=/dashboard/:p*" },
    { "source": "/backup/:p*", "destination": "/api/denied?_src=/backup/:p*" },
    { "source": "/config/:p*", "destination": "/api/denied?_src=/config/:p*" },
    { "source": "/debug/:p*", "destination": "/api/denied?_src=/debug/:p*" },
    { "source": "/staging/:p*", "destination": "/api/denied?_src=/staging/:p*" },
    { "source": "/internal/:p*", "destination": "/api/denied?_src=/internal/:p*" },
    { "source": "/private/:p*", "destination": "/api/denied?_src=/private/:p*" },
    { "source": "/data/:p*", "destination": "/api/denied?_src=/data/:p*" },
    { "source": "/logs/:p*", "destination": "/api/denied?_src=/logs/:p*" },
    { "source": "/tmp/:p*", "destination": "/api/denied?_src=/tmp/:p*" },
    { "source": "/wp-admin/:p*", "destination": "/api/denied?_src=/wp-admin/:p*" },
    { "source": "/wp-login.php", "destination": "/api/denied?_src=/wp-login.php" },
    { "source": "/phpmyadmin/:p*", "destination": "/api/denied?_src=/phpmyadmin/:p*" },
    { "source": "/server-status", "destination": "/api/denied?_src=/server-status" },
    { "source": "/server-info", "destination": "/api/denied?_src=/server-info" },
    { "source": "/cgi-bin/:p*", "destination": "/api/denied?_src=/cgi-bin/:p*" },
    { "source": "/xmlrpc.php", "destination": "/api/denied?_src=/xmlrpc.php" },
    { "source": "/.env", "destination": "/api/denied?_src=/.env" },
    { "source": "/.git/:p*", "destination": "/api/denied?_src=/.git/:p*" },
    { "source": "/sitemap-extended.xml", "destination": "/api/sitemap-trap" },
    { "source": "/share/:type/:id", "destination": "/api/og?type=:type&id=:id" }
  ]
}
